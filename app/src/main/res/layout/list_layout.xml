<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >


    <TextView
        android:id="@+id/type_convert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#009"
        android:textSize="17sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintLeft_toRightOf="@id/tResult"
        app:layout_constraintRight_toLeftOf="@id/tResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:textColor="#f00"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/type_convert"
        />

</androidx.constraintlayout.widget.ConstraintLayout>